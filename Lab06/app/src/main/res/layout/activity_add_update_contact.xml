<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUpdateContactActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/grayTitle">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD/UPDATE Contact"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/bt_save_update"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="SAVE/UPDATE"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#f4f4f4"
            android:layout_margin="8dp"/>
        
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/black"
        android:layout_below="@id/rl_title"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:background="@drawable/rectangle_black_border"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

</RelativeLayout>